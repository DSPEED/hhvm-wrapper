#!/usr/bin/env php
<?php
define('__HPHPA_PHAR__', realpath($GLOBALS['_SERVER']['SCRIPT_NAME']));

spl_autoload_register(
  function ($class)
  {
      static $classes = NULL;

      if ($classes === NULL) {
          $classes = array(
            ___CLASSLIST___
          );
      }

      $class = strtolower($class);

      if (isset($classes[$class])) {
          require 'phar://___PHAR___' . $classes[$class];
      }
  }
);

Phar::mapPhar('___PHAR___');

$textui = new SebastianBergmann\HPHPA\TextUI\Command;
$textui->main();

__HALT_COMPILER();
